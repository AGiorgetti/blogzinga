.row
    div.col-xs-12
        .panel.panel-default
            .panel-body
                form.navbar-form.navbar-left.width100
                    .form-group.width100
                        input.form-control.width100(type="text", placeholder="Search", ng-model="filterBlog")
                        
    div.col-xs-12(ng-show="!blogs", style="margin-top: 4em; text-align: center; font-size: 1.5em;")
        i.fa.fa-cog.fa-spin.fa-3x.fa-fw
                        
    div.col-xs-12(ng-show="blogs")
        .panel(ng-repeat="blog in blogs | search: filterBlog")
            .panel-heading(random-header, ng-click="openUrl(blog.url)")
                h3.panel-title {{blog.title}}
            .panel-body
                .row
                    .col-xs-12.col-sm-7
                        div {{blog.topic}}
                        div By: 
                            em {{blog.authors | join}}
                        div(style="margin-top: 1em")
                            span(ng-repeat="tag in blog.tags")
                                a.label.tags(random-label, href="", ng-click="filterByTag(tag)") {{tag}}
                    .col-xs-12.col-sm-4.blog-image
                        img.hand(ng-src="{{blog.preview}}", ng-click="openUrl(blog.url)" style="width: 200px")
                    .col-xs-12.col-sm-1.social-links
                        a.social.fa.fa-twitter(ng-href="{{blog.twitter}}", target="_blank", ng-if="blog.twitter")
                        a.social.fa.fa-facebook-official(ng-href="{{blog.facebook}}", target="_blank", ng-if="blog.facebook")
                        a.social.fa.fa-github(ng-href="{{blog.github}}", target="_blank", ng-if="blog.github")
                    
                      